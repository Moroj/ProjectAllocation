
<p>
	
	<h4 align='center'>Department Title:  <%= @department.title %></h4>
</p>	
	
	
	<div>
		
		<h4>Courses</h4>
		<div>
			<table class="table table-striped table-bordered table-condensed" align='center' cellpadding='5' width= 70%>
			  <tr>
				<th>Course Title</th>
			  </tr>
			<%= render :partial => @department.courses %>
			</table>
			
		</div>
		<h2>Add a new Course</h2>
		<div class="row">
			<div class="span6 offset3">
		
		  <%= form_for ([:admin, @department, @department.courses.build]) do |f| %>
		 
		    <%= f.label :title, 'Course Title:' %><br />
		    <%= f.text_field :title %>
		 

		  <%= f.submit "Create a Course", class: "btn  btn-primary" %>
		<% end %>
		
		<ul class='nav nav-pills'>
		<li class="active" ><%= link_to 'Back', admin_departments_path %></li></ul>
	</div>
	</div>