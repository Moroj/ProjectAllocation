<% provide(:title, 'Selected Projects List') %>
<h1>Selected Projects List</h1>


		<p align='center'>Change the order of the choices to the order of you preference, then refresh the page to view changes.</p>
		<table 	class="table table-striped table-bordered table-condensed" id="choices" >
			<thead>
		  		<tr>
					<th width='10%' class="center_content">Order</th>
		    		<th width='80%' class="center_content">Project Title</th>
					<th width='10%' class="center_content"></th>
				</tr>
			</thead>
		<tbody class="list" data-update-url= "<%= sort_choices_url %>" >
		<%  @choices.to_a.each do |choice| %>
		<%= content_tag_for :tr, choice do %>
			
			<td class="center_content"><%= choice.position %></td>
			<td class="handle"><%= choice.project.title %></td>
			<td class="center_content"><%= link_to "Delete", choice, :method => :delete %></td>
		<%end%>
		<%end%>
</tbody>
</table>

<ul class='nav nav-pills'>
<li class="active"><%= link_to 'Add a project', project_list_path %></li></ul>

